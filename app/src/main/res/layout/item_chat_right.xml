<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_chat_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_below="@+id/tv_chat_timer"
        android:layout_alignParentRight="true"
        android:id="@+id/iv_chat_headr"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/head_no"
        />
    <TextView
        android:textSize="14sp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:background="@drawable/messages_right"
        android:layout_below="@+id/tv_chat_timer"
        android:layout_toLeftOf="@+id/iv_chat_headr"
        android:id="@+id/tv_chat_contentr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"/>
</RelativeLayout>