<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.strawberrysoft.bookdemo.Activity.ChatActivity">
    <RelativeLayout
        android:id="@+id/layout"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarsize"
        >
        <ImageView
            android:id="@+id/iv_chat_back"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_back"/>
        <TextView
            android:id="@+id/tv_chat_toolbar"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:background="@color/white"
        android:id="@+id/rv_chat_list"
        android:layout_below="@+id/layout"
        android:layout_above="@+id/rl_chat_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/rl_chat_layout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:padding="8dp">
        <EditText
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_toLeftOf="@+id/bt_chat_send"
            android:id="@+id/et_chat_edit"
            android:background="@drawable/rect_background"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <Button
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:background="@drawable/button_background_selector"
            android:layout_alignParentRight="true"
            android:id="@+id/bt_chat_send"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="发送"/>
    </RelativeLayout>
</RelativeLayout>
