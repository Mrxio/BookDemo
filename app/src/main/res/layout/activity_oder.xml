<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    tools:context="com.strawberrysoft.bookdemo.Activity.OderActivity">
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarsize"
        >
        <ImageView
            android:id="@+id/iv_oder_back"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_back"/>
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单确认"
            android:textSize="16sp"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="16dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="图书馆名称"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/gray"/>
        <RelativeLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="8dp"
                android:id="@+id/iv_oder_img"
                android:layout_width="60dp"
                android:layout_height="80dp" />
            <TextView
                android:textColor="@color/black"
                android:textSize="16sp"
                android:id="@+id/tv_oder_title"
                android:text="图书名称"
                android:layout_toRightOf="@+id/iv_oder_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/tv_oder_title"
                android:id="@+id/tv_oder_author"
                android:text="作者"
                android:layout_toRightOf="@+id/iv_oder_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_oder_pubinfo"
                android:layout_below="@+id/tv_oder_author"
                android:text="出版信息"
                android:layout_toRightOf="@+id/iv_oder_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:textSize="16sp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="到馆时间：3天内"
        android:background="@color/white"
        android:layout_marginTop="@dimen/item_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="16sp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="领取方式：自取"
        android:background="@color/white"
        android:layout_marginTop="@dimen/item_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_oder_submit"
        android:layout_marginRight="16dp"
        android:layout_gravity="end"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:text="提交"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@drawable/button_background_selector"/>
</LinearLayout>
