<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_search"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarsize"
        >
        <ImageView
            android:id="@+id/iv_search_back"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_back"/>
        <EditText
            android:layout_centerVertical="true"
            android:background="@drawable/rect_background"
            android:layout_toRightOf="@+id/iv_search_back"
            android:layout_toLeftOf="@+id/iv_search_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/et_toorbal_search"
            android:hint="输入关键字"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            />
        <ImageView
            android:layout_marginRight="8dp"
            android:id="@+id/iv_search_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_microphone_black"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_below="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="历史搜索记录"
            />
        <co.lujun.androidtagview.TagContainerLayout
            android:id="@+id/tcl_searchactivity_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:container_enable_drag="false"
            app:horizontal_interval="10dp"
            app:vertical_interval="10dp"
            app:tag_clickable="true"
            app:tag_theme="random"
            app:container_border_radius="0dp"
            app:container_border_color="@color/white"
            app:container_background_color="@color/white"/>
        <TextView
            android:id="@+id/tv_search_delect"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清除历史记录"
            android:drawableLeft="@mipmap/ic_trash"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_searchactivity_yuyin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/bt_searchactivity_close"
            android:background="@mipmap/ic_window_close"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/et_result"
            android:layout_margin="30dp"
            android:textColor="@color/colorPrimary"
            android:textSize="27sp"
            android:editable="false"
            android:background="@null"
            android:gravity="center"
            android:layout_above="@+id/button"/>
        <Button
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:background="@drawable/button_microphone_background"
            android:id="@+id/button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>
</RelativeLayout>
